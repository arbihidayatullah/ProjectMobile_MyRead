<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/gradien1"
    android:orientation="horizontal"
    tools:context=".MenuUtama">

    <ImageView
        android:id="@+id/menu_cerpen"
        android:layout_width="350px"
        android:layout_height="450px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/logosmall" />
    <Button
        android:id="@+id/btn_novel"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:paddingTop="15px"
        android:layout_below="@+id/menu_cerpen"
        android:layout_marginLeft="15dp"
        android:text="Novel"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/menu_novel"
            android:layout_width="450px"
            android:layout_height="500px"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="83pt"
            android:src="@drawable/logosmall2"/>

        <Button
            android:id="@+id/btn_cerpen"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="185dp"
            android:paddingTop="15px"
            android:text="Cerpen"/>


    </LinearLayout>

</RelativeLayout>